pipeline {
  agent { label 'nix' }

  triggers {
    pollSCM('H/5 * * * *')
  }

  stages {
    stage('prepare') {
      steps {
        sh "nix --version"
      }
    }

    // unfeasible at the moment :(
    // sh "nix flake check ."

    stage('build') {
      steps {
        script {
          def flakeJson = sh(returnStdout: true, script: 'nix flake show --json')
          def flake = readJSON(text: flakeJson)
          flake.packages."x86_64-linux".each { name, _ ->
            sh "nix build .#${name}"
          }
        }
      }
    }

    stage('test') {
      steps {
        dir("test") {
          script {
            sh "nix flake check"
          }
        }
      }
    }
  }
}
