pipeline {
  agent { label 'nix' }

  triggers {
    pollSCM('H/5 * * * *')
  }

  stages {
    stage('prepare') {
      steps {
        sh "nix --version"
      }
    }

    // unfeasible at the moment :(
    // sh "nix flake check . --quiet"

    stage('build') {
      steps {
        script {
          def flakeJson = sh(returnStdout: true, script: 'nix flake show --json --quiet')
          def flake = readJSON(text: flakeJson)
          flake.packages."x86_64-linux".each { name, _ ->
            sh "nix build .#${name} --quiet"
          }
        }
      }
    }

    stage('test') {
      steps {
        dir("test") {
          script {
            def flakeJson = sh(returnStdout: true, script: 'nix flake show --quiet --json')
            def flake = readJSON(text: flakeJson)
            flake.checks."x86_64-linux".each { name, _ ->
              sh "nix build .#checks.\"x86_64-linux\".${name}"
            }
          }
        }
      }
    }
  }
}
