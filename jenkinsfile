pipeline {
  agent { label 'nix' }

  triggers {
    pollSCM('H/5 * * * *')
  }

  stages {
    stage('prepare') {
      steps {
        sh "nix --version"
        echo "branch: ${env.GIT_BRANCH}"
      }
    }

    stage('build') {
      steps {
        script {
          def flakeJson = sh(returnStdout: true, script: 'nix flake show --json')
          def flake = readJSON(text: flakeJson)
          flake.packages."x86_64-linux".each { name, _ ->
            sh "nix build .#${name}"
          }
        }
      }
    }

    stage('test') {
      steps {
        dir("test") {
          // prevents `fetching git input 'git+file://file:..'` from happening
          sh "rm flake.lock"
          sh "nix flake check"
        }
      }
    }

    stage('deploy') {
      steps {
        script {
          if (env.GIT_BRANCH == 'origin/master') {
            sh "nats pub --server \"${NATS_SERVER}\" nixos.autoupgrade \"REF=$GIT_COMMIT\""
          } else {
            echo "Not deploying branch ${env.GIT_BRANCH}"
          }
        }
      }
    }
  }
}
